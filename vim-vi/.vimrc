set nocompatible
filetype on

set background=dark
colorscheme desert

set foldenable
set number
set nobackup
set autoindent
set cindent
set smartindent
set showmatch
set tabstop=4
set softtabstop=4
set shiftwidth=4
set mouse=a
set ruler
set cursorline
set incsearch

set foldmethod=syntax
set foldlevel=100
set foldcolumn=5
