set background=dark
colorscheme desert

set foldenable
set number
set nobackup
set cindent
set smartindent
set showmatch
set tabstop=4
set expandtab
set autoindent
set softtabstop=4
set shiftwidth=4
set mouse=a
set ruler
set cursorline
set incsearch
"缩进指示线"
let g:indentLine_char='┆'
let g:indentLine_enabled = 1

"highlight OverLength ctermbg=red ctermfg=white guibg=#592929
"match OverLength /\%81v.\+/

set foldmethod=syntax
set foldlevel=100
set foldcolumn=5

"vundle
set nocompatible
